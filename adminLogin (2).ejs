    <script>
        const permitUsrName1 = "wagner";
        const permitUsrPassword1 = "n08902dd";

        function checkUsrPassword(event) {
            event.preventDefault(); 

            const usrNameInput = document.getElementById("floatingInput");
            const usrPasswordInput = document.getElementById("floatingPassword");

            const usrName = usrNameInput.value;
            const usrPassword = usrPasswordInput.value;

            if (usrName === permitUsrName1 && usrPassword === permitUsrPassword1) {
                window.location.href = 'admin'; 
